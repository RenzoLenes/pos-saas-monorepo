# Server
NODE_ENV=development
PORT=4000
API_PREFIX=/api

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/pos_db?schema=public"

# Clerk (for JWT verification)
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...

# Superadmin Configuration (comma-separated emails)
SUPERADMIN_EMAILS=admin@example.com,superadmin@example.com

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
